{% extends "::base.html.twig"%}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("bundles/core/css/main.css") }}">
{% endblock %}

{% block body %}
    <header>
        <p>symfony_blog</p>
        <nav>
            <ul>
                <li>
                    <a href="{{ path('blog_core_post_index') }}">{{ 'home' | trans }}</a>
                </li>
            </ul>
        </nav>
    </header>

    {% block sidebar %}

    {% endblock %}

    <section>
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <p class="session-message">{{ message }}</p>
            {% endfor %}
        {% endfor %}
    </section>

    <section>
        {% block section %}
        {% endblock %}
    </section>

    <footer>
        <p>{{   'now' | date('Y') }} symfony_blog</p>
    </footer>

{% endblock %}